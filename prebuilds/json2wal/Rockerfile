FROM aidbox/postgrespro:9.6.3.1

RUN apt-get update
RUN apt-get install -y python libedit-dev g++-4.8 git build-essential

RUN	cd /usr/src/postgresql && mkdir -p contrib/ \
    && cd contrib \
    && git clone https://github.com/niquola/wal2json.git \
    && cd wal2json \
    && make \
    && make install

PUSH aidbox/postgrespro-json2wal:9.6.3.1